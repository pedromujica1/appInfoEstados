<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".MainActivity">

   <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/textInputLayout"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@+id/mapaParana"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/estado">

   </com.google.android.material.textfield.TextInputLayout>

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/estado"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="18dp"
       android:hint="Informe um Estado:"
       app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/mapaParana"
       android:layout_width="408dp"
       android:layout_height="291dp"
       android:layout_marginBottom="103dp"
       android:visibility="invisible"
       app:layout_constraintBottom_toTopOf="@+id/idh"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.333"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
       app:srcCompat="@drawable/mapapr" />

   <ImageView
       android:id="@+id/mapaRiogrande"
       android:layout_width="414dp"
       android:layout_height="385dp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="11dp"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="@+id/mapaStCatarina"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/mapaParana"
       app:srcCompat="@drawable/mapars" />

   <ImageView
       android:id="@+id/mapaStCatarina"
       android:layout_width="411dp"
       android:layout_height="412dp"
       android:layout_marginTop="45dp"
       android:layout_marginBottom="46dp"
       android:visibility="invisible"
       app:layout_constraintBottom_toBottomOf="@+id/idh"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/estado"
       app:layout_constraintVertical_bias="1.0"
       app:srcCompat="@drawable/mapasc" />

   <TextView
       android:id="@+id/idh"
       android:layout_width="134dp"
       android:layout_height="39dp"
       android:layout_marginStart="8dp"
       android:layout_marginBottom="150dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/mapaParana" />

   <TextView
       android:id="@+id/area"
       android:layout_width="141dp"
       android:layout_height="38dp"
       android:layout_marginStart="8dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/idh"
       app:layout_constraintVertical_bias="0.196" />

   <TextView
       android:id="@+id/populacao"
       android:layout_width="157dp"
       android:layout_height="38dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.847"
       app:layout_constraintStart_toEndOf="@+id/area"
       app:layout_constraintTop_toBottomOf="@+id/municipios"
       app:layout_constraintVertical_bias="0.237" />

   <TextView
       android:id="@+id/densidade"
       android:layout_width="150dp"
       android:layout_height="40dp"
       android:layout_marginStart="16dp"
       android:layout_marginBottom="36dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <TextView
       android:id="@+id/municipios"
       android:layout_width="154dp"
       android:layout_height="35dp"
       android:layout_marginTop="22dp"
       android:layout_marginBottom="22dp"
       app:layout_constraintBottom_toTopOf="@+id/area"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.86"
       app:layout_constraintStart_toEndOf="@+id/idh"
       app:layout_constraintTop_toBottomOf="@+id/mapaRiogrande"
       app:layout_constraintVertical_bias="0.984" />

   <Button
       android:id="@+id/btPesquisar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="28dp"
       android:onClick="pesquisar"
       android:text="Pesquisar"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.476"
       app:layout_constraintStart_toEndOf="@+id/densidade" />

</androidx.constraintlayout.widget.ConstraintLayout>
